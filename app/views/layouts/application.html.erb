
<html>
  
  <head>
    
    <title>ECサイト　長野ケーキ</title>
    
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5481e5adce.js" crossorigin="anonymous"></script>
    
  </head>

    <body>
    
    
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            
             <%= link_to root_path, class: "navbar-brand" do %>  
             <%= image_tag('logo.png',size:"100x100") %>
             <% end%>
            
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              
              <ul class="navbar-nav ml-auto">
              
              　<% if customer_signed_in? %>
              　
              　  <li>
                    <%= link_to customers_my_page_path, class: "nav-link text-light" do %>  
                    マイページ
                    <% end%>
                　</li>
              　
              　 　<li>
                    <%= link_to items_path, class: "nav-link text-light" do %>  
                    商品一覧
                    <% end%>
                  </li>
                　
              　   <li>
                   <%= link_to cart_items_path, class: "nav-link text-light" do %>  
                   </i>カート
                    <% end%>
                  </li>
                  
                  <li>
                   <%= link_to destroy_customer_session_path, class: "nav-link text-light", method: :delete do %>  
                   </i>ログアウト
                    <% end%>
                  </li>
                  
                <% elsif admin_signed_in? %>
              　
              　 　<li>
                    <%= link_to admin_items_path, class: "nav-link text-light" do %>  
                   商品一覧
                    <% end%>
                  </li>
    
                  <li>
                    <%= link_to admin_customers_path, class: "nav-link text-light" do %>  
                    会員一覧
                    <% end%>
                　</li>
                　
                　<li>
                    <%= link_to admin_path, class: "nav-link text-light" do %>  
                    注文履歴一覧
                    <% end%>
                　</li>
                　
              　   <li>
                   <%= link_to admin_genres_path, class: "nav-link text-light" do %>  
                    ジャンル一覧
                    <% end%>
                  </li>
                  
                  <li>
                   <%= link_to  destroy_admin_session_path, class: "nav-link text-light", method: :delete do %>  
                    ログアウト
                    <% end%>
                  </li>
                  
                  
            　  <% else %>
            　 
            　 　　<li>
                    <%= link_to about_path, class: "nav-link text-light" do %>  
                    <i class="fas fa-link"></i>About
                    <% end%>
                  </li>
            　 
                  <li>
                    <%= link_to items_path, class: "nav-link text-light" do %>  
                    <i class="fas fa-home"></i>商品一覧
                    <% end%>
                  </li>
                        
                  <li>
                    <%= link_to new_customer_registration_path, class: "nav-link text-light" do %>  
                    <i class="fas fa-user-plus"></i>新規登録
                    <% end%>
                　</li>
                　
              　   <li>
                   <%= link_to new_customer_session_path, class: "nav-link text-light" do %>  
                    <i class="fas fa-sign-in-alt"></i>ログイン
                    <% end%>
                  </li>
  
                <% end %>
              
                 
              </ul>
            </div>
          </div>
        </nav>
      </header>


      <main>
        <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
        
        <%= yield %>
      </main>
      
      
